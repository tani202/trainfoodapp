<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/btnblueish"
    android:textAlignment="center"
    android:textDirection="inherit"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/back2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        app:srcCompat="@drawable/img1" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="275dp"
        android:layout_height="390dp"
        android:background="@drawable/background_shape"
        android:orientation="vertical"
        android:padding="10dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.473">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:capitalize="none"
            android:fontFamily="@font/caudex"
            android:gravity="center|center_horizontal"
            android:includeFontPadding="false"
            android:padding="12dp"
            android:paddingLeft="11dp"
            android:text="WELCOME"
            android:textAlignment="gravity"
            android:textColor="@color/blueish"
            android:textDirection="locale"
            android:textSize="34sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/SigninwithEmail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btnblueish"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:fontFamily="@font/caudex"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="SignIn with Email" />

        <Button
            android:id="@+id/Signinwithphone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btnblueish"
            android:drawableLeft="@drawable/white_phone"
            android:fontFamily="@font/caudex"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="SignIn with phone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="7dp"
            android:gravity="clip_horizontal"
            android:orientation="horizontal">

            <TableRow
                android:id="@+id/hr"
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="#0B0A0A" />

            <TextView
                android:id="@+id/OR"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:text="OR"
                android:textAlignment="center"
                android:textColor="#121111"
                android:textSize="24sp" />

            <TableRow
                android:id="@+id/dr"
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="#131313" />

        </LinearLayout>

        <Button
            android:id="@+id/signup"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:drawableLeft="@drawable/button_shape"
            android:fontFamily="@font/caudex"
            android:text="Signup" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>